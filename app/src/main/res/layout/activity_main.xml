<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.peter.rawtutorial.MainActivity">

    <RadioGroup
        android:id="@+id/music_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/music_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hydrangea"
            android:textSize="@dimen/text_size" />

        <RadioButton
            android:id="@+id/music_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/canon"
            android:textSize="@dimen/text_size" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/seek_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/play_pause"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@android:drawable/ic_media_play"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/stop"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/ic_media_stop"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>
